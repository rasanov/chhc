@model CHHC.Web.Models.LoginModel
@{
    ViewBag.Title = "Sign in";
}

<div class="container page page-title-background about">    
    <h2 class="page-title">@Html.Raw(CHHC.Web.ViewHelper.PrepareTitle(ViewBag.Title))</h2>
    <div class="container page-content">
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
				    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class="control-label" })
                        @Html.TextBoxFor(m => m.UserName, new { @class="form-control", @placeholder="User name" })
                        @Html.ValidationMessageFor(m => m.UserName)
				    </div>
				    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class="control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class="form-control", @placeholder="Password" })
                        @Html.ValidationMessageFor(m => m.Password)
				    </div>
				    <div class="form-group">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class="control-label" })
				    </div>
                    <button type="submit" class="btn btn-default">Sign In</button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
