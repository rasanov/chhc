@model CHHC.Web.Models.LocalPasswordModel
@{
    ViewBag.Title = "Change password";
}

<div class="container page page-title-background mychhc">    
    <h2 class="page-title">@Html.Raw(CHHC.Web.ViewHelper.PrepareTitle(ViewBag.Title))</h2>
    <div class="container page-content">
        <div class="row">
            <div class="col-md-6">
                @Html.Partial("_MessagePartial")
                @using (Html.BeginForm("ChangePassword"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    @Html.HiddenFor(m => m.UserName)

				    <div class="form-group">
                        @Html.LabelFor(m => m.OldPassword, new { @class="control-label" })
                        @Html.PasswordFor(m => m.OldPassword, new { @class="form-control", @placeholder="Old Password" })
				    </div>
				    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword, new { @class="control-label" })
                        @Html.PasswordFor(m => m.NewPassword, new { @class="form-control", @placeholder="New Password" })
				    </div>
				    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class="control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class="form-control", @placeholder="Confirm Password" })
				    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Save</button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
